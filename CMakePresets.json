{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 24,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "ninja-multi-config",
            "hidden": true,
            "generator": "Ninja Multi-Config"
        },
        {
            "name": "binary-dir",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/out"
        },
        {
            "name": "warn-flags",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic -Wno-conversion -Wno-sign-conversion -Wcast-qual -Wformat=2 -Wundef -Wshadow -Wcast-align -Wunused -Wnull-dereference -Wdouble-promotion -Wimplicit-fallthrough -Woverloaded-virtual -Wnon-virtual-dtor -Wold-style-cast"
            }
        },
        {
            "name": "ccache",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_COMPILER_LAUNCHER": "ccache"
            }
        },
        {
            "name": "linux-default",
            "inherits": [
                "ninja-multi-config",
                "ccache",
                "warn-flags",
                "binary-dir"
            ],
            "displayName": "Linux X64 Default",
            "description": "Default preset for a desktop Linux development environment",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_CXX_FLAGS_DEBUG": "-g",
                "CMAKE_CXX_FLAGS_RELEASE": "-O3 -DNDEBUG",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "build-debug",
            "displayName": "Build in Debug mode",
            "configurePreset": "linux-default",
            "configuration": "Debug"
        },
        {
            "name": "build-release",
            "displayName": "Build in Release mode",
            "configurePreset": "linux-default",
            "configuration": "Release"
        }
    ],
    "testPresets": [
        {
            "name": "test-gtest-debug",
            "displayName": "Run GTest unit tests",
            "configurePreset": "linux-default",
            "configuration": "Debug",
            "output": {
                "outputOnFailure": true,
                "verbosity": "verbose"
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        },
        {
            "name": "test-gtest-release",
            "displayName": "Run GTest unit tests",
            "configurePreset": "linux-default",
            "configuration": "Release",
            "output": {
                "outputOnFailure": true,
                "verbosity": "verbose"
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        }
    ]
}
